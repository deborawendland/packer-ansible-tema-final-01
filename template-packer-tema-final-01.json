{
  "builders":[
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8888"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install python3 python3-pip python3-apt -yq",
        "pip3 install ansible", 
        "apt install default-jre",
        "apt-get install unzip",
        "apt-get upgrade",
        "wget \"https://repo1.maven.org/maven2/org/eclipse/jetty/jetty-distribution/9.4.29.v20200521/jetty-distribution-9.4.29.v20200521.zip\"",
	"unzip jetty-distribution*.zip",
	"cd jetty-distribution*",
	"java -jar start.jar -Djetty.port=8888"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./playbook-tema-final-01.yml"
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/infra/calculator-jetty-docker/1.0/calculator-jetty-docker-1.0.war",
      "destination": "/opt/jetty/webapps/"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "deborawendland/tema-final-01",
        "tag": "1.0"
      },
      "docker-push"
    ]
  ]
}
