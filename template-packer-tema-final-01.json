{
  "builders":[
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8888"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install python3 python3-pip python3-apt -yq",
        "pip3 install ansible", 
        "apt install default-jre",
        "wget -nv -O /tmp/jetty.tar.gz \"ttps://repo1.maven.org/maven2/org/eclipse/jetty/jetty-distribution/9.4.14.v20181114/jetty-distribution-9.4.14.v20181114.zip\"", 
        "tar xzf /tmp/jetty.tar.gz -C /opt", 
        "mv /opt/jetty* /opt/jetty", 
        "useradd jetty -U -s /bin/false", 
        "chown -R jetty:jetty /opt/jetty",
	"nano /etc/default/jetty",
	"echo  \"JETTY_HOME=/opt/jetty\nJETTY_USER=jetty\nJETTY_PORT=8888\nJETTY_HOST=http://localhost\nJETTY_LOGS=/opt/jetty/logs/\" > /etc/default/jetty",
        "bin/jetty.sh  start"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./playbook-tema-final-01.yml"
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/infra/calculator-jetty-docker/1.0/calculator-jetty-docker-1.0.war",
      "destination": "/opt/jetty/webapps/"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "deborawendland/tema-final-01",
        "tag": "1.0"
      },
      "docker-push"
    ]
  ]
}
