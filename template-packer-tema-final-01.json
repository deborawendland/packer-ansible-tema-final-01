{
  "builders":[
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8888",
        "ENTRYPOINT [\"java\", \"-jar\", \"calculator-1.0.jar\"]"      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install python3 python3-pip python3-apt -yq",
        "pip3 install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook-tema-final-01.yml"
    },
    {
      "type": "file",
      "source": "calculator/1.0/calculator-1.0.jar",
      "destination": "/"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "deborawendland/calculator",
        "tag": "1.0"
      },
      "docker-push"
    ]
  ]
}
